<%- include('partials/header') %>
<div class="container mx-auto px-4 pt-16 pb-20">
    <div class="grid gap-4">
        <% entries.forEach(function(entry) { %>
            <a href="/diary/<%= entry.id %>" class="block bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition">
                <div class="flex justify-between items-center mb-2">
                    <h3 class="font-bold text-lg text-pink-600"><%= entry.title %></h3>
                    <span class="text-sm text-gray-500">
                        <%= new Date(entry.created_at).toLocaleDateString('th-TH') %>
                    </span>
                </div>
                <p class="text-sm text-gray-600 mb-2">
                    เขียนโดย: <span class="text-pink-800 font-medium"><%= entry.author_name %></span>
                </p>
                <% if (entry.image_url) { %>
                    <img src="<%= entry.image_url %>" alt="Diary Image" 
                         class="w-full h-48 object-cover rounded-lg mb-2">
                <% } %>
                <div class="mt-2 flex items-center">
                    <% if (entry.mood) { %>
                        <span class="text-sm bg-pink-100 text-pink-800 px-2 py-1 rounded">
                            <%= entry.mood %>
                        </span>
                    <% } %>
                    <% if (entry.location) { %>
                        <span class="text-sm text-gray-500 ml-2">
                            <i class="fas fa-map-marker-alt"></i> <%= entry.location %>
                        </span>
                    <% } %>
                </div>
            </a>
        <% }); %>
    </div>
</div>
<%- include('partials/footer') %>
